extends ../layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h2.mb-4 Nieuwe gebruiker aanmaken
        form(method="POST", action="/users/create")
          .mb-3
            label.form-label(for="first_name") Voornaam
            input.form-control(type="text", name="first_name", id="first_name", required)
          .mb-3
            label.form-label(for="last_name") Achternaam
            input.form-control(type="text", name="last_name", id="last_name", required)
          .mb-3
            label.form-label(for="email") E-mail
            input.form-control(type="email", name="email", id="email", required)
          .mb-3
            label.form-label(for="password") Wachtwoord
            input.form-control(type="password", name="password", id="password", required)
          .mb-3
            label.form-label(for="address") Adres
            input.form-control(type="text", name="address", id="address", required)
            .mb-3
                label.form-label(for="district") district 
                input.form-control(type="text", name="district", id="district", required)
          .mb-3
            label.form-label(for="city") Stad
            input.form-control(type="text", name="city", id="city", required)
            .mb-3
                label.form-label(for="postal_code") postal_code 
                input.form-control(type="text", name="postal_code", id="postal_code", required)
            .mb-3
                label.form-label(for="phone") phone
                input.form-control(type="text", name="phone", id="phone", required)
          .d-flex.justify-content-end

        
          button.btn.btn-primary(type="submit") Aanmaken
          a.btn.btn-secondary.ms-2(href="/users") Annuleren
