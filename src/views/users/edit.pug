extends ../layout        

block content
  form(method="post", action=`/users/${user.id}/edit`)
    .mb-3
      label(for="exampleInputEmail1", class="form-label") Email address
      input(type="email", class="form-control", id="exampleInputEmail1", aria-describedby="emailHelp", name="email", value=user.email)
    button(type="submit", class="btn btn-primary") Submit
    a(class="btn btn-secondary", href=`/users/${user.id}/details`) Back to user details