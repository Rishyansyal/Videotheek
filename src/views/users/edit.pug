extends ../layout        

block content
  form(method="post", action=`/users/${user.customer_id}/edit`)
    .mb-3
      label(for="email", class="form-label") Email address
      input(type="email", name="email", class="form-control", id="email", aria-describedby="emailHelp", value=user.email)
    button(type="submit", class="btn btn-primary") Submit
    a(class="btn btn-secondary", href=`/users/${user.customer_id}/details`) Back to user details