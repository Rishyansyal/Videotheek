doctype html
html(lang='nl')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Videotheek
    // Bootstrap CSS
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css' integrity='sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB' crossorigin='anonymous')
    
    link(rel='icon', type='image/png', href='/favicon.png')
    // Extra head injectie
    block head
  body.d-flex.flex-column.min-vh-100
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.mb-4
      .container-fluid
        a.navbar-brand.fw-semibold(href='/') Videotheek
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            - const currentPath = typeof path !== 'undefined' ? path : '';
            li.nav-item
              a.nav-link(class=currentPath=='/'?'active':'', href='/') Home
            li.nav-item
              a.nav-link(class=currentPath.startsWith('/movies')?'active':'', href='/movies') Films
            li.nav-item
              a.nav-link(class=currentPath.startsWith('/users')?'active':'', href='/users') Gebruikers
            li.nav-item
              a.nav-link(class=currentPath.startsWith('/about')?'active':'', href='/about') Over
            li.nav-item
              a.nav-link(class=currentPath.startsWith('/contact')?'active':'', href='/contact') Contact
          form.d-flex(role='search', method='get', action='/movies/search')
            input.form-control.form-control-sm.me-2(type='text', name='q', placeholder='Zoek film...')
            button.btn.btn-outline-light.btn-sm(type='submit') Zoek

    // Main content wrapper
    main.flex-grow-1
      // Flash / messages placeholder
      if messages && messages.length
        .container.mt-3
          each msg in messages
            .alert.alert-info= msg
      // Page content
      block content

    
    footer.mt-5.bg-light.border-top.py-4
      .container.text-center
        .mb-2
          a.small.mx-2.text-decoration-none.text-muted(href='/privacy') Privacy
          a.small.mx-2.text-decoration-none.text-muted(href='/terms') Voorwaarden
          a.small.mx-2.text-decoration-none.text-muted(href='/contact') Contact
        small.text-muted &copy; #{new Date().getFullYear()} Videotheek.

    
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js' integrity='sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI' crossorigin='anonymous')
    script(src='/javascripts/delete.user.js')

    block scripts

